<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="100dp"
    android:background="@android:color/transparent"> <!-- Optional: Ensure no background -->

    <!-- Toast Button at the top -->
    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TOAST"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:background="@drawable/button_background"/> <!-- Set margin to 0 -->

    <!-- Set margin to 0 -->

    <TextView
        android:id="@+id/show_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button_toast"
        android:layout_toRightOf="@+id/button_toast"
        android:background="#fff043"
        android:gravity="center"
        android:text="0"
        android:textColor="#3f51b5"
        android:textSize="120sp" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_toast"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:background="#3f51b5"
        android:text="COUNT"
        app:cornerRadius="0dp"
        /> <!-- Set margin to 0 -->

</RelativeLayout>
